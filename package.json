{
  "name": "svf",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "lint": "eslint packages/**",
    "c": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "changelog": {
    "labels": {
      "feat": ":rocket: 新功能",
      "fix": ":bug: BUG修复",
      "style": ":memo:  不改变代码逻辑 (仅仅修改了空格、格式缩进、逗号等等)",
      "docs": ":memo: 修改文档，比如 README, CHANGELOG, CONTRIBUTE 等等",
      "refactor": ":house: 重构（既不修复错误也不添加功能）",
      "perf": ":boom: 优化相关，比如提升性能、体验",
      "test": ":boom: 增加测试，包括单元测试、集成测试等",
      "build": ":boom: 构建系统或外部依赖项的更改",
      "ci": ":boom: 自动化流程配置或脚本修改",
      "chore": ":boom: 非 src 和 test 的修改",
      "revert": ":boom: 恢复先前的提交"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "axios": "^0.19.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.0.1",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "commitizen": "^4.1.2",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^1.3.1",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "lerna-changelog": "^0.5.0",
    "lint-staged": "^9.2.0",
    "prettier": "^2.0.3",
    "qs": "^6.9.3",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --format=codeframe",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "flatmap-stream": "0.0.1-security"
  }
}
